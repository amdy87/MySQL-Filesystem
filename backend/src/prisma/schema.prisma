generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime? @default(now())
  email     String      @unique
  name      String
  password  String
  role      Role        @default(USER)
}

enum Role {
  ADMIN
  USER
}

model Directory {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @default(now())
  name            String    
  path            String
  parentId        Int?
  ownerId         Int
}

model File {
  id              Int       @id @default(autoincrement())
  content         String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @default(now())
  name            String
  path            String
  parentId        Int
  ownerId         Int
}

