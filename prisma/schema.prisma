generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("USER_DB_URL") 
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String?
  password  String?
  File      File?
  Directory Directory[]
}

model Directory {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @default(now())
  directoryName   String
  directoryParent Int?
  path            String
  userId          User?     @relation(fields: [id], references: [id])
}

model File {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @default(now())
  fileName        String
  directoryParent Int
  path            String
  userId          User?     @relation(fields: [id], references: [id])
}
