generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("USER_DB_URL") 
}

model User {
  id        Int         @id @default(autoincrement())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime? @default(now())
  email     String      @unique
  name      String
  password  String
  role      String
}

model Directory {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @default(now())
  name            String    
  path            String
  parentId        Int?
  ownerId         Int
}

model File {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @default(now())
  name            String
  path            String
  parentId        Int
  ownerId         Int
  fileContentId   Int

}

model FileContent {
  id      Int @id @default(autoincrement())
  fileId  Int
  content String
}